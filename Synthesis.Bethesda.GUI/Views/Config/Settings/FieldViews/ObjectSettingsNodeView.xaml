<local:ObjectSettingsNodeViewBase
    x:Class="Synthesis.Bethesda.GUI.Views.ObjectSettingsNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border Style="{StaticResource ReflectionSettingBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="SettingNameBlock"
                Margin="0,0,6,4"
                Style="{StaticResource ReflectionSettingName}" />
            <local:ReflectionSettingNodeView Grid.Row="1" />
        </Grid>
    </Border>
</local:ObjectSettingsNodeViewBase>
